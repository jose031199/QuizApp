@{
    ViewData["Title"] = "LogIn";
}
@model Users;

<h1>Create user</h1>
<form class="bg-light border-light row-cols-6 p-2 justify-content-center" onsubmit="event.preventDefault()">
    <div class="col-auto mb-3">
        <label class="form-label" for="txtUsername">Username: </label>
        <input type="text" placeholder="Username" class="form-control" id="txtUsername" required/>
    </div>

    <div class="col-auto mb-3">
        <label class="form-label" for="txtEmail">Email: </label>
        <input type="email" placeholder="example@gmail.com" class="form-control" id="txtEmail" required/>
    </div>

    <div class="col-auto mb-3">
        <label class="form-label" for="txtUsername">Password: </label>
        <input type="password" placeholder="******" class="form-control" id="txtPassword" required/>
    </div>

    <div class="btn-group-vertical">
        <button class="btn btn-success p-2" id="btn_create">Create</button>
        <a class="text-info text-center" style="font-size:14px; cursor:pointer" asp-controller="Login" asp-action="LogUser">Already have an user? Login</a>
    </div>
</form>

